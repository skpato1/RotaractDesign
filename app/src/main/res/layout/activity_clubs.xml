<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#A0241C"
    android:id="@+id/component"

    tools:context="com.example.skander.rotaractdesign.Second_activity">

    <TextView
        android:id="@+id/home"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="40dp"
        android:text="@string/home"
        android:textAppearance="@style/home" />

    <TextView
        android:id="@+id/history"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_alignBaseline="@+id/home"
        android:layout_alignBottom="@+id/home"
        android:layout_centerHorizontal="true"
        android:text="@string/history"
        android:textAppearance="@style/history" />

    <TextView
        android:id="@+id/clubs"
        android:layout_width="49dp"
        android:layout_height="19dp"
        android:layout_alignBaseline="@+id/history"
        android:layout_alignBottom="@+id/history"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:text="@string/clubs"
        android:textAppearance="@style/clubs" />

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_below="@+id/clubs"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="409dp"
        android:layout_toEndOf="@+id/history"
        android:layout_toRightOf="@+id/history"
        app:srcCompat="@drawable/logo" />




</RelativeLayout>